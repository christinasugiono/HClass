<div class="container mb-4 mt-4">
  <div class="card-item">

    <%= cl_image_tag @item.photo.key, crop: :fill %>
    <div class="card-item-middle">
      <h3><%= @item.name %></h3>
      <br>
      <div class="item-details d-flex">
        <div>
          <p>Brand:</p>
          <p>Category:</p>
          <p>Description:</p>
          <p>Price: </p>
        </div>
        <div class="item-value">
          <p><%= @item.brand %></p>
          <p><%= @item.category %></p>
          <p><%= @item.description %></p>
          <p>$<%= @item.price %> per day</p>
        </div>
      </div>

    </div>
    <div class="card-item-right">
      <%= cl_image_tag @item.user.avatar.key, id:"avatar" %>
      <a class="btn btn-ghost" href="#">Save for Later</a>
    </div>
  </div>
  <br>
  <br>
  <div class="container d-flex justify-content-between align-items-start">
    <div>
      <h3>Reviews:</h3>
      <div class="card-review">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-product-infos">
          <h2>Product name</h2>
          <p>Product description with <strong>relevant info</strong> only.</p>
        </div>
      </div>
      <br>
      <div class="card-review">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-product-infos">
          <h2>Product name</h2>
          <p>Product description with <strong>relevant info</strong> only.</p>
        </div>
      </div>
      <br>
      <div class="card-review">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-product-infos">
          <h2>Product name</h2>
          <p>Product description with <strong>relevant info</strong> only.</p>
        </div>
      </div>
    </div>
    <div class="reserve-form">
      <h2>Book now</h2>
      <%= simple_form_for [@item, @booking] do |f| %>
        <%= f.input :total_price, as: :hidden %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date,as: :date, html5: true %>
        <%= f.submit "Rent Now" %>
      <% end %>
      <br>
      <p>You won't be charged yet</p>
    </div>
  </div>
  <br>
  <a href="#" class="text-dark">Click here for more reviews</a>
  <br>
  <a href="#" class="text-dark">Browse for more classes</a>
</div>
