<%= simple_form_for @item do |f| %>
  <%= f.input :photo, as: :file %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :brand %>
  <%= f.input :address,
              input_html: { data: { geocoder_target: "address" }, class: "d-none" },
              wrapper_html: { data: { controller: "geocoder",
              geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
  <%= f.input :category, collection: Item::CATEGORIES  %>
  <%= f.submit "Create Item", class: "btn btn-secondary" %>
<% end %>
